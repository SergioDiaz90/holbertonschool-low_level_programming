#############################

CC = gcc
SRC = main.c holberton.c
NAME = holberton
OBJ = $(SRC:%.c=%.o)
RM = rm -f
#############################
.PHONY: all

all: $(OBJ)
		$(CC) $(OBJ) -o $(NAME)

clean:
		$(RM) *~ $(NAME)

oclean: $(OBJ)
		$(RM) $(OBJ)

fclean: clean oclean

re: all
		$(CC) $(OBJ) -o $(NAME)